<form bindsubmit="formSubmit">
  <view class='text-flex' style='font-size: 28rpx' wx:if='{{oldcode}}'>
    <view class='text-1'>最近{{oldstatus}}：</view>
    <view class='text-2'>{{oldtime}} {{oldbelong}} {{oldcategory}} {{oldcode}} {{oldcompany}}</view>
  </view>

  <!-- <view class='text-flex' style='font-size: 28rpx'>
    <view class='text-1'>最近入库：</view>
    <view class='text-2'>啊啊 法国恢复 ldcategory oldcompany</view>
  </view> -->

	<view class="cu-form-group">
		<view class="title">用户编号</view>
		<input placeholder="请输入用户编号" name='user_number'></input>
	</view>
	<view class="cu-form-group">
		<view class="title">订单号</view>
		<input placeholder="扫码获取的订单号" name='code' value='{{code}}'></input>
	</view>
	<view class="cu-form-group">
		<view class="title">快递公司</view>
		<input wx:if='{{can_auto_identify}}' placeholder="订单所属快递公司" name='company' value='{{company}}(自动识别)'></input>
    <input wx:else placeholder="无法自动识别，请手动输入" name='company' value='{{company}}'></input>
	</view>
  <view class="cu-form-group">
		<view class="title">种类</view>
		<picker placeholder="请选择种类" bindchange="PickerChange" value="{{index}}" range="{{picker}}" name='category'>
			<view class="picker" style='text-align:left;'>
				{{index?picker[index]:'请选择种类'}}
			</view>
		</picker>
	</view>

	<view wx:if='{{index==index_end}}' class="cu-form-group">
		<view class="title">其它种类</view>
		<input placeholder="请输入详细类别" name='remarks'></input>
	</view>

	<view class="cu-form-group">
		<view class="title">数量</view>
		<input placeholder="请输入数量" name='quantity' type='number' value="1"></input>
	</view>

  <view wx:for='{{add_item}}' wx:key>
    <view class='before-box margin-top'>
      <text>第{{item}}箱 </text>
      <button class="cu-btn bg-blue light margin-left" bindtap='add'>增加箱数</button>
      <button wx:if='{{index > 0}}' class="cu-btn bg-blue light margin-left" bindtap='minus'>减少箱数</button>
    </view>
    <view class="box">
      <view class="column">
        <view class='cu-form-group' style='min-height:80rpx;'>
          <view class="title">长</view>
          <input placeholder="长度，cm" name='length{{item}}' type='number'></input>
        </view>
        <view class='cu-form-group' style='min-height:80rpx;'>
          <view class="title">宽</view>
          <input placeholder="宽度，cm" name='width{{item}}' type='number'></input>
        </view>
      </view>
      <view class="column">
        <view class='cu-form-group' style='min-height:80rpx;'>
          <view class="title">高</view>
          <input placeholder="高度，cm" name='height{{item}}' type='number'></input>
        </view>
        <view class='cu-form-group' style='min-height:80rpx;'>
          <view class="title">重</view>
          <input placeholder="重量，kg" name='weight{{item}}' type='digit'></input>
        </view>
      </view>
    </view>
  </view>

  <view class="padding flex flex-direction">
    <!-- <button class="cu-btn lg mar-bottom-20" form-type="submit" data-toindex='t'>录入并返回</button>
    <button class="cu-btn bg-green lg mar-bottom-20" form-type="submit" data-toindex='f'>录入并继续</button> -->
    <button class="cu-btn bg-green lg mar-bottom-20" form-type="submit">{{confirm_text}}</button>
    <button class="self-style" form-type="submit" data-refund='t'>退货</button>
  </view>
</form>
